<!doctype html>
<html>
  <head>
    <title>Register for the health app</title>
    <base href="/usr/365/">
    <link rel="stylesheet"  type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>Register for the health app</h1>
    
    <% if (errors && errors.length > 0) { %>
      <div style="color: red;">
        <h3>Registration failed. Please fix the following errors:</h3>
        <ul>
          <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
          <% }); %>
        </ul>
      </div>
    <% } %>
    
    <form method="POST" action="registered">
        <p>First name: <input id="first" type="text" name="first" /></p>
        <p>Last name: <input id="last" type="text" name="last" /></p>
        <p>Email: <input id="email" type="email" name="email" /></p>
        <p>Username: <input id="username" type="text" name="username" /></p>
        <p>Password: <input id="password" type="password" name="password" /></p>
        <input type="submit" value="Register" />
      </form>
  </body>
</html>